{
    "compilerOptions": {
        "esModuleInterop": true,
        "target": "es2017",
        "module": "esnext",
        "moduleResolution": "node",
        "allowJs": true,
        "declaration": true,
        "outDir": "./lib",
        "strict": false, 
        "sourceMap": true,
        "noImplicitAny": false,
        "noEmitHelpers": true,
        "importHelpers": true,
        "strictNullChecks": true,
        "strictFunctionTypes": false,
        "strictPropertyInitialization": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "resolveJsonModule": true,
        "baseUrl": "./",
        "paths": {
            "~/*": [
                "app/*"
            ],
            "@/*": [
                "app/*"
            ]
        },
        "types": [
            "node",
            "jest"
        ],
        "typeRoots": [
            "./app/types",
            "./node_modules/@types"
        ],
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "removeComments": false,
        "lib": [
            "dom",
            "es2017"
        ]
    },
    "exclude": [
        "node_modules",
        "platforms",
        "node_modules/@types/jasmine"

    ],
    "include": [
        "app"
    ]
}